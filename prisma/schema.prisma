generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Submission {
  id           String   @id @default(cuid())
  type         String   // "quote" | "realtor" | "partner" | "franchise"
  name         String
  email        String?
  phone        String?
  message      String?
  work         String?
  areas        String?
  propertyType String?
  size         String?
  status       String?  @default("new") // new | contacted | offer_sent | offer_accepted | offer_rejected | work_in_progress | work_done
  createdAt    DateTime @default(now())
}
